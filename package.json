{
	"name": "@skriptfabrik/directus-extensions",
	"private": true,
	"packageManager": "pnpm@10.28.2",
	"description": "Extensions for Directus",
	"keywords": [
		"directus",
		"directus-extensions"
	],
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"directus:start": "tools/scripts/directus-start.sh",
		"directus:stop": "tools/scripts/directus-stop.sh",
		"fix:code": "eslint --fix",
		"fix:deps": "knip --fix",
		"fix:markdown": "markdownlint-cli2 --fix",
		"fix:versions": "syncpack fix-mismatches",
		"format:style": "prettier --write .",
		"format:versions": "syncpack format",
		"link": "turbo link",
		"lint:code": "eslint",
		"lint:commits": "commitlint",
		"lint:deps": "knip",
		"lint:markdown": "markdownlint-cli2",
		"lint:style": "prettier --check .",
		"lint:versions": "syncpack lint",
		"validate": "turbo validate"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.4.2",
		"@commitlint/config-conventional": "^20.4.2",
		"@directus/eslint-config": "^0.1.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/exec": "^7.1.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"knip": "^5.83.1",
		"markdownlint-cli2": "^0.21.0",
		"prettier": "^3.8.1",
		"semantic-release": "^25.0.3",
		"syncpack": "^14.0.0",
		"turbo": "^2.8.9"
	},
	"pnpm": {
		"patchedDependencies": {
			"conventional-changelog-conventionalcommits": "patches/conventional-changelog-conventionalcommits.patch"
		}
	}
}
