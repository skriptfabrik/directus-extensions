{
	"$schema": "https://unpkg.com/knip@5/schema.json",
	"workspaces": {
		".": {
			"ignore": ["packages/*/release.config.mjs"],
			"ignoreBinaries": [
				"tools/scripts/directus-start.sh",
				"tools/scripts/directus-stop.sh"
			],
			"ignoreDependencies": [
				"@semantic-release/changelog",
				"@semantic-release/exec"
			]
		},
		"packages/*": {
			"entry": ["**/{api,app,index}.ts"]
		}
	}
}
